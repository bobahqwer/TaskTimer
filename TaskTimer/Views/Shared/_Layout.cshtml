                    </span>
                    <span>
                        <div class="fb-like" data-send="false" data-layout="button_count" data-width="20" data-show-faces="true" data-font="tahoma"></div>
                    </span>
                    
                </div>*@
                @Html.MvcSiteMap().SiteMapPath()
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left rights">
                    <p>@Html.ActionLink("®", "Index", "Admin", new { area = "Admin" }, new { style = "text-decoration: none; cursor: default;" }) @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
                <div class="float-left fotterMiddleLinks">
                    <p>@Html.ActionLink("Site map", "SiteMap", "Home")</p>
                </div>
                <div class="float-right">
                    <ul id="visits">
                        <li>@Resources.Views.Shared.LayoutPartual.OnlineVisitors: @App["onlinevisitors"]</li>
                        @if (App["totalvisitors"] != null)
                        {
                            <li>@Resources.Views.Shared.LayoutPartual.TotalVisitors: @App["totalvisitors"]</li>
                        }
                        @if (App["totalusers"] != null)
                        {
                            <li>@Resources.Views.Shared.LayoutPartual.TotalUsers: @App["totalusers"]</li>
                        }
                    </ul>
                </div>
            </div>
        </footer>
        @RenderSection("scripts", required: false)
    </body>
</html>
