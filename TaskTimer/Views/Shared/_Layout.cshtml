@using TaskTimer.UsefulClasses
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/themes/base/css",
        "~/Content/css", 
        //"~/Scripts/tablesorter/themes/blue/style.css",
        "~/Scripts/custom-scrollbar-plugin/jquery.mCustomScrollbar.css",
        "~/Content/dropdown/dropdown.vertical.rtl.css",
        "~/Content/dropdown/themes/default/default.css",
        "~/Content/GoogleDoc.css",
        "~/Content/FAQ.css",
