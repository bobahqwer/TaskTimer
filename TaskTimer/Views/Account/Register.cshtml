@model TaskTimer.Models.RegisterModel

@{
    ViewBag.Title = @Resources.Views.Account.Strings.Register;
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@Resources.Views.Account.Strings.CreateANewAccount</h2>
</hgroup>

<p class="message-info">
    @String.Format(Resources.Views.Account.Strings.PasswordsMustBeAtLeast, @Membership.MinRequiredPasswordLength)
</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.IsEmailRegConform)
                @Html.LabelFor(m => m.IsEmailRegConform, new { style = "display: inline-block;" })
            </li>
        </ol>
        <input type="submit" value="@Resources.Views.Account.Strings.Register" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
