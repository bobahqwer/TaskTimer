@model List<TaskTimer.Models.GalleryImages>

@for (int i = 0; i < Model.Count; i++)
{
    <tr>
        <td>
            @Html.HiddenFor(m => Model[i].Id)
            <div class="galleryImageText">Image name: @Model[i].Name</div>
        </td>
        <td></td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => Model[i].Alt)</td>
        <td>@Html.TextBoxFor(m => Model[i].Alt)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => Model[i].BottomText)</td>
        <td>@Html.TextBoxFor(m => Model[i].BottomText)</td>
    </tr>
}

            
        