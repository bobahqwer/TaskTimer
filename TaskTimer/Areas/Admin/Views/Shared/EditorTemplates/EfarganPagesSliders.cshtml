@model TaskTimer.Models.EfarganPagesSliders

<tr onclick="OpenRowEditor(this,event);">
    <td>
        @Model.Id
        @Html.HiddenFor(m => Model.Id)
    </td>
    <td>
        <div style="display: none;">
            @Html.ValueFor(m => Model.SliderTitle)
        </div>
        @Html.TextBoxFor(m => Model.SliderTitle)
    </td>
    <td>
        <div style="display: none;">
            @Html.ValueFor(m => Model.SliderText)
        </div>
        @Html.TextBoxFor(m => Model.SliderText, new { @class = "TextAreaEditor" })
    </td>
    <td>
        <div style="display: none;">CustomMembershipDB
            @Html.ValueFor(m => Model.SliderLinkText)
        </div>
        @Html.TextBoxFor(m => Model.SliderLinkText)</td>
    <td>
        <div style="display: none;">
            @Html.ValueFor(m => Model.SliderLinkURL)
        </div>
        @Html.TextBoxFor(m => Model.SliderLinkURL)</td>
    <td>
        @Html.ValueFor(m => Model.SliderImageFileName)
        @Html.HiddenFor(m => Model.SliderImageFileName)
        @Html.HiddenFor(m => Model.SliderImageURL)
        <input type="file" name="SliderImage_@Model.Id" />
    </td>
    <td>
        <div>
            @if (Model.Id != -1)
            {
                <input type="submit" value="Update" onclick="CloseAllRowEditor(this, event);" />
                <span>| </span>
                <span class="actionSpan" onclick="DeleteSliderData(this, @Model.Id)">Delete</span>
            }
            else
            {
                <input type="submit" value="Add new slider" />
            }
        </div>
    </td>
</tr>
<tr style="display: none;" class="textBoxEdit" onclick="CloseRowEditor(this,event);">
    <td>
        <b>@Model.Id</b>
    </td>
    <td>
    </td>
    <td>
        @Html.TextAreaFor(m => Model.SliderText, new { @class = "TextAreaFor_" + Model.Id, style="width: 500px; height:150px;"})
    </td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
</tr>
