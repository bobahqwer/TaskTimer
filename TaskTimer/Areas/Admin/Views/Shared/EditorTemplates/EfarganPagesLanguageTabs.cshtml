@model HashSet<TaskTimer.Models.EfarganPagesLanguage>

@{
    var i = (int)ViewData["i"]; //next tab id
}
@foreach (var item in Model)
{
    @Html.Raw("<div id='tabs-" + i + "'>")
    i++;
    var tmpSliderTab = new TaskTimer.Models.EfarganPagesSliders();
    tmpSliderTab.Id = -1;
    item.EfarganPagesSliders.Add(tmpSliderTab);
    if (item.EfarganPagesSliders.Count == 1)
    {
        tmpSliderTab = new TaskTimer.Models.EfarganPagesSliders();
        tmpSliderTab.Id = -1;
        item.EfarganPagesSliders.Add(tmpSliderTab);
    }
    using (Html.BeginForm("EfarganPagesLanguageEdit", "AdminEfargan", new { id = item.Id, itemType = "Sliders", itemCount = item.EfarganPagesSliders.Count }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <table class="tablesorter">
        <thead>
            <tr>
                <th>
                    @Html.LabelFor(m => tmpSliderTab.Id)
                </th>
                <th>
                    @Html.LabelFor(m => tmpSliderTab.SliderTitle)
                </th>
                <th>
                    @Html.LabelFor(m => tmpSliderTab.SliderText)
                </th>
                <th>
                    @Html.LabelFor(m => tmpSliderTab.SliderLinkText)
                </th>
                <th>
                    @Html.LabelFor(m => tmpSliderTab.SliderLinkURL)
                </th>
                <th>
                    @Html.LabelFor(m => tmpSliderTab.SliderImageFileName)
                </th>
                <th>Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @Html.EditorFor(m => item.EfarganPagesSliders)
        </tbody>
    </table>
    }
    @Html.Raw("</div>")    
    
    
    
    
    @Html.Raw("<div id='tabs-" + i + "'>")
