                <thead>
                    <tr>
                        <th>
                            @Html.LabelFor(m => tmpParagraphTab.Id)
                        </th>
                        <th>
                            @Html.LabelFor(m => tmpParagraphTab.ParagraphTitle)
                        </th>
                        <th>
                            @Html.LabelFor(m => tmpParagraphTab.ParagraphText)
                        </th>
                        <th>
                            @Html.LabelFor(m => tmpParagraphTab.ParagraphLinkText)
                        </th>
                        <th>
                            @Html.LabelFor(m => tmpParagraphTab.ParagraphLinkURL)
                        </th>
                        <th>
                            @Html.LabelFor(m => tmpParagraphTab.ParagraphImageFileName)
                        </th>
                        <th>Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @Html.EditorFor(m => item.EfarganPagesParagraphs)
                </tbody>
            </table>
    }
    @Html.Raw("</div>")   
    
    
    
    
    @Html.Raw("<div id='tabs-" + i + "'>")
    i++;
